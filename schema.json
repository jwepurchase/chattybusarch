{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the capability."
    },
    "name": {
      "type": "string",
      "description": "Name of the capability."
    },
    "description": {
      "type": "string",
      "description": "Detailed description of what the capability does."
    },
    "sub_capabilities": {
      "type": "array",
      "description": "List of Level 2 and Level 3 sub-capabilities.",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the sub-capability."
          },
          "name": {
            "type": "string",
            "description": "Name of the sub-capability."
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the sub-capability."
          }
        },
        "required": ["id", "name", "description"]
      }
    }
  },
  "required": ["id", "name", "description"]
}

